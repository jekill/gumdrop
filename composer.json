{
    "name":"simonjodet/gumdrop",
    "description":"Gumdrop is a static website generator converting Markdown files and using the Twig templating engine.",
    "keywords":["markdown", "generator", "twig"],
    "version":"1.1.1",
    "type":"library",
    "authors":[
        {
            "name":"Simon Jodet",
            "email":"simon@jodet.com"
        }
    ],
    "license":"MIT",
    "require":{
        "php":">=5.3.3",
        "simonjodet/markdown":"1.0.2",
        "simonjodet/Twig":"1.9.2"
    },
    "require-dev":{
        "mockery/mockery":"0.7.2",
        "behat/behat":"2.4.*@stable",
        "simonjodet/fstesthelper":"2.*"
    },
    "autoload":{
        "psr-0":{
            "Gumdrop":"."
        }
    },
    "scripts":{
        "post-update-cmd":"\\Gumdrop\\Installation::setPermissions",
        "post-install-cmd":"\\Gumdrop\\Installation::setPermissions",
        "post-package-install":"\\Gumdrop\\Installation::setPermissions",
        "post-package-update":"\\Gumdrop\\Installation::setPermissions"
    }
}